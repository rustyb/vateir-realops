<% if AdminData::Util.has_many_what(klass.name).size > 0 %>
  <p>
    <strong>has_many :</strong>
      <% AdminData::Util.has_many_what(klass.name).each do |hm| 
          label = hm + '(' + AdminData::Util.has_many_count(model,hm).to_s + ')'
      %>
      <% if AdminData::Util.has_many_count(model,hm) > 0 %>
        <%= link_to label, {:action => 'list', 
                            :klass => AdminData::Util.get_class_name_for_has_many_association(model,hm), 
                            :send => hm,
                            :base => klass.name, 
                            :model_id => model.id} %>        
      <% else %>
        <%= label %>      
      <% end %>  
      &nbsp;
    <% end %>  
  </p> 
<% end %>  
