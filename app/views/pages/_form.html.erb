<% form_for @page do |f| %>
  <%= f.error_messages %>

<div id="scaffold_form">
  <table>
    <tr>
      <th><%= f.label :parent_id %></th>
      <td><%= f.collection_select :parent_id, Page.all(:order => "name"), :id, :name, :include_blank => true %></td>
    </tr>
    <tr>
      <th><%= f.label :name %></th>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <th><%= f.label :content %></th>
      <td><%= f.text_area :content %></td>
    </tr>
    <tr>
      <th><%= f.label "Side Bar Content" %></th>
      <td><%= f.text_area :side_bar %></td>
    </tr>
 </table>
 </div>
  <p><%= f.submit "Submit" %></p>
<% end %>
