<% form_for @category, :html => {:multipart => true} do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
<div id="downloads">
  <%= render 'download', :collection => @category.downloads %>
</div>

<%= add_download_link "Add a Download" %>

  <p><%= f.submit "Submit" %></p>
<% end %>
