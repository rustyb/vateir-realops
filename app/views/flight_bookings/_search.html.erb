<div class="notice">
<% form_for @search do |f| %>

  <table>
    <tr>
      <th colspan="2">Search for a Flight:</th>
    </tr>
    <tr>
      <td><%= f.label :dep_like, "Origin" %> </td>
      <td><%= f.text_field :dep_like, :maxlength => 4, :size => 30 %></td>
    </tr>
    <tr>
      <td><%= f.label :arr_like, "Destination" %></td>
      <td><%= f.text_field :arr_like, :maxlength => 4, :size => 30 %></td>
    </tr>
  </table>
  <p>
    <%= f.submit "Search" %>
  </p>

<% end %>
 </div>