<% title "Downloads" %>

<table>
  <tr>
    <th>Category</th>
    <th>Name</th>
    <th>Description</th>
  </tr>
  <% for download in @downloads %>
    <tr>
      <td><% if download.category.blank? %>
        No CAT
        <% else %>
  <%=h download.category.name %>
  <% end %></td>
      <td><%=h download.name %></td>
      <td><%=h download.description %></td>
      <td><%= link_to "Show", download %></td>
      <td><%= link_to "Edit", edit_download_path(download) %></td>
      <td><%= link_to "Destroy", download, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Download", new_download_path %></p>
